{
  "manifest_version": 3,
  "name": "TOPBOOMPOP â€” Life Clock & Segmented Timer",
  "version": "2.0",
  "description": "Visualize your lifetime and structure your daily sessions with mindful time segmentation.",
  "permissions": ["notifications", "storage"],
  "host_permissions": [
    "https://localhost:3000/*",
    "https://127.0.0.1:3000/*",
    "https://*.vercel.app/*",
    "https://topboompop-lifeclock.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}